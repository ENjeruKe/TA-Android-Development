<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.temperaturecalculator.MainActivity" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="top|center_horizontal"
        android:text="@string/temperature_converter"
        android:textSize="10pt" />

    <Button
        android:id="@+id/fahrenheitButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView1"
        android:layout_toLeftOf="@+id/celsiusButton"
        android:gravity="center_vertical"
        android:text="to F\u00B0" />

    <Button
        android:id="@+id/celsiusButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/fahrenheitButton"
        android:layout_alignBottom="@+id/fahrenheitButton"
        android:layout_alignParentRight="true"
        android:gravity="center_vertical"
        android:text="to C\u00B0" />

    <EditText
        android:id="@+id/editText1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/fahrenheitButton"
        android:layout_toLeftOf="@+id/fahrenheitButton"
        android:ems="10"
        android:hint="@string/temp_value_hint" />

</RelativeLayout>